<turbo-frame id="card-index">
  <div class="container mt-5">
    <div class="card mx-auto w-75">
      <img src="<%=image_url('background.png') %>" class="card-img-top" alt="background">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <h5 class="card-title">Lottery</h5>
        <p class="card-text">Let's Open a lottery</p>
        <div class="container d-flex justify-content-center">
          <a href="/openLottery" class="btn btn-primary mx-2">Open Lottery</a>
          <a href="#" class="btn btn-secondary mx-2">Close Lottery</a>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
