<turbo-frame id="card-index" class="container">
  <%# winner selection %>
  <div id="closeCard">
    <div class="card text-center w-100 mt-5 mx-auto">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link active" aria-current="true" href="/closeLottery">Lottery Info</a>
          </li>
          <li class="nav-item">
            <%=link_to "Participant", participant_path, class: "nav-link", data: { turbo_frame: "main"} %>
          </li>
        </ul>
      </div>
      <div class="card-body">
        <turbo-frame id="main">
          <ul class="list-group w-100 mx-auto mt-3">
            <%# <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-black bg-opacity-50">
            Lottery Number
            <span class="badge bg-primary " id="lotteryNumber">14</span>
          </li> %>
            <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-black bg-opacity-50">
              Lottery Price
              <span class="badge bg-primary " id="lotteryPrice">14</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-black bg-opacity-50">
              Opening Date
              <span class="badge bg-primary " id="openTime">2</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-black bg-opacity-50">
              Closing Date
              <span class="badge bg-primary " id="closeTime">1</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-black bg-opacity-50">
              Lottery open
              <span class="badge bg-primary " id ="isOpen">1</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center bg-secondary text-black bg-opacity-50">
              Winner Selected
              <span class="badge bg-primary " id="isWinnerSelected">1</span>
            </li>
          </ul>
        </turbo-frame>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="container mt-4 d-none" id="selectWinnerBtn">
        <Button class="btn btn-secondary">Select Winner</Button>
      </div>
      <div class="container mt-4 d-flex d-none" id="closeLotteryBtn">
        <Button class="btn btn-danger">Close Lottery</Button>
      </div>
    </div>
  </div>
  <%# spinner %>
  <div class="d-flex  align-items-center justify-content-center d-none" style="height: 85vh" id="spinner">
    <button class="btn btn-danger" type="button" disabled>
      <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
      <span class="visually-hidden">Loading...</span>
    </button>
    <button class="btn btn-danger ms-2" type="button" disabled>
      <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
      Please Wait, Processing !! 
    </button>
  </div>
</turbo-frame>
